/**index.wxss**/
.container {
  padding: 60rpx;
  width: 100%;
}

.container1 {
  width: 100%;
}
.title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.score-card {
  border: 1px solid #000;
  padding: 40rpx;
  width: 100%;
  box-sizing: border-box;
}


.subject-score {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
}

.subject-score::after {
  content: '';
  position: absolute; 
  bottom: -1px; 
  left: 0; 
  width: 100%; 
  height: 1px; 
  background-color: #ccc; 
}


.subject {
  font-size: 22rpx;
}

.score {
  font-size: 22rpx;
}

.gpa-card {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx; 
  margin-bottom: 20rpx; 
}

.gpa4
 {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx; 
}
.gpa5
{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.gpa4-value,
.gpa5-value {
  font-size: 26rpx;
  font-weight: bold;
}

.gpa4-label,
.gpa5-label {
  font-size: 18rpx;
  font-weight: lighter;
}

.navbar {
  display: flex;
  justify-content: space-between;
  width: 100%;
  align-items: center;
  height: 60rpx;
  background-color: #f0f0f0;
}

.navbar-item {
  font-size: 16rpx;
  color: #333;
  cursor: pointer;
}
